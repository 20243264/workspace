{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "C/C++: gcc.exe build active file",
        "type": "shell",
        "command": "gcc",
        "args": [
          "-g",                                 // 디버깅 정보를 포함하여 빌드
          "${file}",                            // 현재 열려 있는 파일을 컴파일
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}.exe" // 출력 파일 설정
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Generated by VS Code."
      }
    ]
  }
  
  